                  "AgainstUserId": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "ReasonComplaint": {
                    "$ref": "#/components/schemas/ReasonComplaint"
                  },
                  "Description": {
                    "maxLength": 2000,
                    "type": "string"
                  },
                  "EvidenceUrl": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "TransactionId": {
                  "style": "form"
                },
                "ComplaintantId": {
                  "style": "form"
                },
                "AgainstUserId": {
                  "style": "form"
                },
                "ReasonComplaint": {
                  "style": "form"
                },
                "Description": {
                  "style": "form"
                },
                "EvidenceUrl": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
